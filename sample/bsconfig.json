{
    "comment": "BrighterScript config for Sample App",
    "rootDir": ".",
    "files": [
        "source/**/*.*",
        "components/**/*.*",
        "images/**/*.*",
        "fonts/**/*.*",
        "manifest",
        "credentials.json"
    ],
    "plugins": [
        "@rokucommunity/bslint"
    ],
    "createPackage": true,
    "retainStagingDir": true,
    "diagnosticFilters": [
        "components/roku_modules/**/*.*",
        "source/roku_modules/**/*.*",
        "source/exploding.bs"
    ],
    "lintConfig": "tools/lint/bslint.json"
}