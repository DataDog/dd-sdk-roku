{
    "comment": "BrighterScript config for Datadog Roku Library",
    "rootDir": ".",
    "files": [
        "source/**/*.*",
        "components/**/*.*"
    ],
    "plugins": [
        "@rokucommunity/bslint"
    ],
    "createPackage": false,
    "retainStagingDir": true,
    "stagingDir": "../dist",
    "diagnosticFilters": [
        "source/roku_modules/**/*.*"
    ],
    "lintConfig": "tools/lint/bslint.json"
}