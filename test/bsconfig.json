{
    "comment": "BrighterScript config for Unit Test App",
    "rootDir": ".",
    "files": [
        "source/**/*.*",
        "components/**/*.*",
        "images/**/*.*",
        "fonts/**/*.*",
        "manifest"
    ],
    "plugins": [
        "@rokucommunity/bslint"
    ],
    "createPackage": true,
    "retainStagingFolder": true,
    "diagnosticFilters": [
        "components/roku_modules/**/*.*",
        "source/roku_modules/**/*.*",
        "source/testFramework/*.brs"
    ],
    "lintConfig": "tools/lint/bslint.json"
}